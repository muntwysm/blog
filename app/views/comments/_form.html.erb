<%= form_for([@post, @post.comments.build]) do |f| %>
    
<%= f.hidden_field :user_id, :value => current_user.id.to_int %>
  <div class="field">
    <%= f.label :body, "Comment" %><br />
    <%= f.text_area :body, :rows => 5, :cols => 80 %>
  </div>
  <div class="actions">
    <%= f.submit 'Add Comment' %>
  </div>
<% end %>